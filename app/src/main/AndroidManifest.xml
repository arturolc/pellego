        <activity
            android:name="com.example.pellego.SettingsActivity"
            android:label="@string/menu_settings"
            android:theme="@style/Translucent" />

        <provider
            android:name="com.github.axet.androidlibrary.services.FileProvider"
            android:authorities="com.github.axet.bookreader.files"
            android:exported="false"
            android:grantUriPermissions="true" />
        <provider
            android:name="com.github.axet.androidlibrary.services.StorageProvider"
            android:authorities="com.github.axet.bookreader.storage"
            android:exported="false"
            android:grantUriPermissions="true" />
        <provider
            android:name="com.github.axet.androidlibrary.services.AssetsProvider"
            android:authorities="com.github.axet.bookreader.images"
            android:exported="false"
            android:grantUriPermissions="true" />


        <activity android:name=".ui.pellegolibrary.BookPreviewActivity"></activity>
        <activity android:name="com.amazonaws.mobileconnectors.cognitoauth.activities.CustomTabsRedirectActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https://development50c2b620-50c2b620-dev.auth.us-west-2.amazoncognito.com/oauth2/idpresponse" />
            </intent-filter>
        </activity>
        <activity android:name=".VerifyActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.example.pellego"
                    android:pathPrefix="/logout"
                    android:scheme="pellego" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.example.pellego"
                    android:pathPrefix="/login"
                    android:scheme="pellego" />
            </intent-filter>
