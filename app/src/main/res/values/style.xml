<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="FileDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">90dp</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="PreferenceStyle">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/dark_blue</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorColor</item>

    </style>

    <style name="ListSeparatorColor">
        <item name="android:background">@color/white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppThemeLight" parent="AppThemeLightLib">
        <item name="side_nav_bar">@drawable/side_nav_bar_light</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="AlertDialog.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:windowBackground">@color/grey_transparent</item>
        <item name="android:itemBackground">@color/light_blue</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="toolbar_bottom_icon_text" parent="toolbar_icon_text">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>