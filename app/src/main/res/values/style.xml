<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="FileDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">90dp</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="PreferenceStyle">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/white</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorColor</item>

    </style>
    <style name="ListSeparatorColor">
        <item name="android:background">@color/white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>