<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="android:statusBarColor">@color/light_blue</item>
    </style>

    <!--    This is the theme that's actually used -->
    <style name="Theme.Pellego" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorSecondary">@color/gray_card</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="itemTextColor">@color/bottom_nav_color_light</item>
        <item name="itemIconTint">@color/bottom_nav_color_light</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/gray_hover</item>
<!--        <item name="popupMenuBackground">@color/light_blue</item>-->
        <item name="android:itemTextAppearance">@style/LightActionBar.MenuTextStyle</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue</item>
        <item name="android:textColor">@color/gray_hover</item>
        <item name="android:textColorSecondary">@color/grey_transparent</item>
        <!-- Styles -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="LightActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/light_blue</item>
    </style>

    <style name="LightActionBar.MenuTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogThemeLight" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorBackground">@color/primary_white</item>
        <item name="android:colorAccent">@color/light_blue</item>
        <item name="android:colorPrimary">@color/light_blue</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
        <item name="textColorAlertDialogListItem">@color/gray_card</item>
        <item name="color">@color/light_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <!--  Dark Theme Styles   -->
    <style name="Theme.Pellego_Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorAccent">@color/gray_hover</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="colorPrimaryDark">@color/gray_hover</item>
        <item name="android:textColorSecondary">@color/secondary_white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/gray_hover</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="android:itemTextAppearance">@style/DarkActionBar.MenuTextStyle</item>
        <item name="itemTextColor">@color/bottom_nav_color_dark</item>
        <item name="itemIconTint">@color/bottom_nav_color_dark</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>

        <!-- Styles -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:itemBackground">@color/gray_hover</item>
    </style>


    <style name="DarkActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/light_blue</item>
    </style>

    <style name="DarkActionBar.MenuTextStyle">
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="DialogThemeDark" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorBackground">@color/gray_hover</item>
        <item name="android:colorAccent">@color/light_blue</item>
        <item name="android:colorPrimary">@color/light_blue</item>
        <item name="android:textColorSecondary">@color/secondary_white</item>
        <item name="textColorAlertDialogListItem">@color/primary_white</item>
        <item name="color">@color/light_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>