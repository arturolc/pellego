<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="com.github.axet.bookreader.activities.MainActivity">

    <ImageView
        android:id="@+id/tts_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/afc_button_navi_left"
        android:tint="?attr/colorAccent" />

    <ImageView
        android:id="@+id/tts_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/afc_button_navi_right"
        android:tint="?attr/colorAccent" />

    <ImageView
        android:id="@+id/tts_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:tint="@color/black"
        android:src="@drawable/ic_media_play_dark" />

    <ImageView
        android:id="@+id/tts_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:tint="@color/black"
        android:src="@drawable/ic_close_black_24dp" />
</LinearLayout>
