<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="?colorControlHighlight"
    tools:context=".fragments.auth.VerifyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your 6-digit verification code"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNumber0"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et0"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et1"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber0"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et2"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber1"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et3"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et4"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="49dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:background="#BADFD5D5"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:tag="et5"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber4"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="We sent you a verification code to your email. You didn't recieve it?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textViewSendNewCode"
            android:layout_width="199dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Send a new verification code"
            android:textColor="#2196F3"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <Button
            android:id="@+id/nextBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="next"
            android:backgroundTint="@color/light_blue"
            android:textColor="#FFFFFF"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSendNewCode" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>