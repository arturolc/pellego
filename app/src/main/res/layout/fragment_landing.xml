<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".fragments.auth.LandingFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="846dp"
        android:layout_height="778dp"
        android:foreground="#AB000000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/landing_page_background" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="323dp"
        android:layout_height="54dp"
        android:text="Welcome to Pellego"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/signupBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="314dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:text="Continue with Google"
        android:background="@drawable/custom_button_rounded_corners"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_google__g__logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupBtn" />

    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="314dp"
        android:layout_margin="10dp"
        android:layout_height="36dp"
        android:text="Continue with Facebook"
        android:gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_rounded_corners"
        android:textColor="#FFFFFF"
        app:backgroundTint='#3b5998'
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:cornerRadius="25sp"
        android:drawableLeft="@drawable/ic_facebook_circular_logo"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn" />


    <Button
        android:id="@+id/signupBtn"
        android:layout_width="314dp"
        android:layout_height="36dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="5dp"
        android:text="Sign up Free"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_rounded_corners"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/white"
        app:cornerRadius="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Log In"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebookBtn"
        app:layout_constraintVertical_bias="0.027" />

</androidx.constraintlayout.widget.ConstraintLayout>