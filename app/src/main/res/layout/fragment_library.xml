<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.library.LibraryFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="146dp"
        android:background="@color/light_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="70dp" />

            <GridLayout
                android:id="@+id/gridview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:columnWidth="110dp"
                android:layout_gravity="center"
                android:numColumns="3"
                android:verticalSpacing="24dp"
                android:horizontalSpacing="20dp"
                android:stretchMode="spacingWidthUniform">

                <TextView
                    android:id="@+id/book_1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_height="160dp"
                    android:background="@drawable/catcher_in_the_rye"
                    android:layout_width="110dp"
                    android:layout_margin="4dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/book_2"
                    android:layout_height="160dp"
                    android:background="@drawable/harry_potter"
                    android:layout_width="110dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/book_3"
                    android:layout_height="160dp"
                    android:background="@drawable/leviathan_wakes"
                    android:layout_width="110dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                   />
                <TextView
                    android:id="@+id/book_empty"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_height="160dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/white_transparent"
                    android:layout_width="110dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text=""/>

            </GridLayout>

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>